    function toggleWidgetZones() {
        if ($('#@Html.IdFor(model => model.CatalogPageId)').val() == 1) {
            $('#productWidgetId').show();
            $('#categoryWidgetId').hide();
            $('#manufactureWidgetId').hide();
        } else if ($('#@Html.IdFor(model => model.CatalogPageId)').val() == 2) {
            $('#productWidgetId').hide();
            $('#categoryWidgetId').show();
            $('#manufactureWidgetId').hide();
        }else if ($('#@Html.IdFor(model => model.CatalogPageId)').val() == 3) {
            $('#productWidgetId').hide();
            $('#categoryWidgetId').hide();
            $('#manufactureWidgetId').show();
        }
        @* $("#@Html.IdFor(model => model.WidgetZoneId)").change(toggleBackgroundImagecard);*@
    }

    function toggleBackgroundImagecard() {
        @*if (($('#@Html.IdFor(model => model.WidgetZoneId)').val() != 5)
