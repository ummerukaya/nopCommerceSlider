    function toggleAutoPlay() {
        if ($('#@Html.IdFor(model => model.AutoPlay)').is(':checked')) {
            $('#pnlAutoPlay').show();
        } else {
            $('#pnlAutoPlay').hide();
        }
    }

    function toggleLazyLoad() {
        if ($('#@Html.IdFor(model => model.LazyLoad)').is(':checked')) {
            $('#pnlLazyLoad').show();
        } else {
            $('#pnlLazyLoad').hide();
        }
    }

    function toggleNav() {
        if ($('#@Html.IdFor(model => model.Nav)').is(':checked')) {
            $('#pnlNav').show();
        } else {
            $('#pnlNav').hide();
        }
    }
</script>

